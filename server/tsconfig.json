{
  "extends": "../tsconfig.json",
  "compilerOptions": {
      "target": "esnext",
      "module": "ESNext",
      "lib": ["es6", "es5", "es7", "dom"],
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./build",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
  "exclude": ["node_modules", "build"]
}
